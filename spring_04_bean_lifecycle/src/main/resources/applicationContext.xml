<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

        <!--方式一（生命周期）（init-method，destroy-method）标注出生命周期方法-->
        <bean id="bookDao1" name="dao" class="com.yxy.dao.impl.BookDaoImpl" init-method="init" destroy-method="destory"/>

        <bean id="bookService" name="service service2 serviceEbi" class="com.yxy.service.impl.BookServiceImpl">
                <property name="bookDao" ref="bookDao1"/>
        </bean>

</beans>